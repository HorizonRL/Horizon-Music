#:kivy 1.11.1

#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import Video kivy.uix.video.Video
#: import Image kivy.uix.image.Image
#: import ScrollView kivy.uix.scrollview.ScrollView
#=============================================

WindowManager:
    transition: NoTransition()

    Intro:
    MenuScreen:
    InfoScreen:
    MyLibsScreen:
    MySongsScreen:
    AllSongsScreen:

#=============================================

<Intro>:
    name: "intro"

    Video:
        id: intro
        source: app.gui_files.INTRO
        size: self.texture_size
        state: 'play'

    ImageButton:
        id: contBTN
        source: app.gui_files.CONTINUE_WINDOW_WIDGET

        pos: 1790, 15
        size: 118, 118

        on_release: 
            app.root.current = "Menu"
            intro.state = 'stop'

#=============================================
    
<MenuScreen>:
    name: "Menu"

    BackgroundImage:

    ImageButton:
        id: infoBTN
        source: app.gui_files.INFO_WIDGET

        pos: 1310, 165
        size: 360, 360
        
        on_release: 
            app.root.current = "Info"

    ImageButton:
        id: musicBTN
        source: app.gui_files.ALL_MUSIC_WIDGET

        pos: 750, 105
        size: 410, 410
        
        on_release: 
            app.root.current = "AllSongs"

    ImageButton:
        id: playlistBTN
        source: app.gui_files.PLAYLIST_WIDGET

        pos: 250, 165
        size: 350, 350
        
        on_release: 
            app.root.current = "Libs"

    ImageButton:
        id: quitBTN
        source: app.gui_files.QUIT_WIDGET

        pos: 1790, 15
        size: 118, 118

        on_release:
            app.get_running_app().stop()

    Image:
        id:SearchBar
        source: app.gui_files.SEARCH_BAR_WIDGET

        pos: 580, 500
        size: 600, 600
        size_hint: None, None
        stretch: True
        keep_ratio: True

        TransTextInput:
            font_size: 45

            pos: 608, 755
            size: 520, 80

            canvas.before:
                Color:
                    rgba: 0.157, 0.455, 1, 1

    ImageButton:
        id:SearchIcon
        source: app.gui_files.SEARCH_WIDGET

        pos: 1200, 750

#=============================================

<InfoScreen>:
    name: "Info"

    Image:
        source: app.gui_files.INFO_SCREEN
        size: self.texture_size

    BackToMenuBTN:


<MyLibsScreen>:
    name: "Libs"

    BackgroundImage:

    Folder:
        id: folderBTN1
        playlist_name: "blah"

        pos: 130, 550
        size: 500, 300

        on_release:
            app.root.current = "MySongs"

    BackToMenuBTN:

#=============================================

<MySongsScreen>:
    name:"MySongs"

    BackgroundImage:

    MediaPlayer:

    ImageButton:
        id: backWinBTN
        source: app.gui_files.BACKWARD_WINDOW_WIDGET

        pos: 1790, 15
        size: 118, 118

        on_release: 
            app.root.current = "Libs"

#=============================================

<AllSongsScreen>:
    name: "AllSongs"
    BackgroundImage:
    
    MediaPlayer:     

    BackToMenuBTN:

# ================== my des ==================

<SmoothButton@Button>:

    background_color: (0.0, 0.0, 0.0, 0.0)
    background_normal: ''

    back_color: (0.157, 0.455, 0.753, 0.971)
    border_radius: [13]

    opacity: 1 if self.state == 'normal' else 0.5

    canvas.before:

        Color:
            rgba: self.back_color

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius

# =================

<imageButton>:
    size_hint: None, None
    stretch: True
    keep_ratio: True

    on_press:
        app.click_sound()

# =================

<BackgroundImage@Image>:
    source: app.gui_files.BACKGROUND
    size: self.texture_size

# =================

<BackToMenuBTN@ImageButton>:
    source: app.gui_files.BACK_TO_MENU_WIDGET
    pos: 1790, 15
    size: 118, 118

    on_release: 
        app.root.current = "Menu"

# =================

<Folder@ImageButton>:
    id: baseFolder
    source: app.gui_files.FOLDER_WIDGET
    playlist_name: 'New Folder'

    TransTextInput:
        text: baseFolder.playlist_name

        pos: baseFolder.x + 200, baseFolder.y - 35
        font_size: 30

        disabled: True
    
# =================

<TransTextInput>:
    multiline: False
    foreground_color: (1,0,1,1)
    background_color: (0,0,0,0)
    cursor_color: (0.157, 0.455, 0.9, 0.971)
    cursor_width: 3

    canvas.before:
        Color:
            rgba: 0.157, 0.455, 1, 1

    on_text_validate:
        app.click_sound()

# =================

<MediaPlayer@Image>:
    id: mediaPlayer
    source: app.gui_files.MEDIA_PLAYER_BACK
    pos: 0,-460
    size: self.texture_size[0] - 20 , self.texture_size[1]

    ImageButton:
        id: playPause
        source: app.gui_files.MEDIA_PLAYER_PLAY_PAUSE
        pos: mediaPlayer.x + 867, mediaPlayer.y + 435
        size: 150, 150
        
    ImageButton:
        id: next
        source: app.gui_files.MEDIA_PLAYER_NEXT
        pos: playPause.x + 173, playPause.y + 11
        size: 125, 125
    
    ImageButton:
        id: prev
        source: app.gui_files.MEDIA_PLAYER_PREV
        pos: playPause.x - 150, next.y + 4
        size: 125, 125

# =================

<SongWidget>:
    id: song
    ImageButton:
        id: songBody
        source: app.gui_files.SONG_BACK
        # pos: 0, 700
        size: self.texture_size

        Label:
            id: songName
            text: "blah"
            font_size: 50
            bold: True
            size: songBody.texture_size
            halign: 'left'
            pos: songBody.x - 425, songBody.y
            text_size: 800, None

#=================
